.out-frame 
  .out-frame__header
    = link_to root_path do
      = image_tag 'logo.png', class: "out-frame__header--img"
  = form_with model: @user, local: true, url: user_registration_path do |f|
    .new_user
      %h2.new_user__head 会員情報入力
      .user_form
        .field
          .item
            = f.label "ニックネーム"
            = f.label "必須", class: "required"
          = f.text_field :nickname, autofocus: true, placeholder: "例）フリーメン", class: "input-form"
          - if resource.errors.include?(:nickname)
            .error-message
              = resource.errors.full_messages_for(:nickname).first


        .field
          .item
            = f.label "メールアドレス"
            = f.label "必須", class: "required"
          = f.email_field :email, autocomplete: "email", placeholder:"携帯・PCどちらでも", class: "input-form"
          - if resource.errors.include?(:email)
            .error-message
              = resource.errors.full_messages_for(:email).first

        .field
          .item
            = f.label "パスワード"
            = f.label "必須", class: "required"
          = f.password_field :password, placeholder: "#{@minimum_password_length}文字以上の半角英数字", autocomplete: "new-password", class: "input-form"
          - if resource.errors.include?(:password)
            .error-message
              = resource.errors.full_messages_for(:password).first

        .field
          .item
            = f.label "パスワード確認"
            = f.label "必須", class: "required"
          = f.password_field :password_confirmation, placeholder:"上記と同様のパスワード", autocomplete: "new-password", class: "input-form"
          - if resource.errors.include?(:password_confirmation)
            .error-message
              = resource.errors.full_messages_for(:password_confirmation).first

        .field
          .item
            = f.label "お名前(全角)"
            = f.label "必須", class: "required"
          = f.text_field :family_name, placeholder:"古間", class: "input-form input-name"
          = f.text_field :given_name, placeholder:"太郎", class: "input-form input-name"
          - if resource.errors.include?(:family_name)
            .error-message
              = resource.errors.full_messages_for(:family_name).first
          - if resource.errors.include?(:given_name)
            .error-message
              = resource.errors.full_messages_for(:given_name).first

        .field
          .item
            = f.label "お名前カナ(全角)"
            = f.label "必須", class: "required"
          = f.text_field :family_name_kana, placeholder:"フリマ", class: "input-form input-name"
          = f.text_field :given_name_kana, placeholder:"タロウ", class: "input-form input-name"
          - if resource.errors.include?(:family_name_kana)
            .error-message
              = resource.errors.full_messages_for(:family_name_kana).first
          - if resource.errors.include?(:given_name_kana)
            .error-message
              = resource.errors.full_messages_for(:given_name_kana).first

        .field
          .item
            = f.label "生年月日"
            = f.label "必須", class: "required"
          != sprintf(f.date_select(:birthday, prefix:'birthday',with_css_classes:'XXXXX', prompt:"--",use_month_numbers:true, start_year:Time.now.year, end_year:1900, date_separator:'%s'),'年','月')+'日'
          - if resource.errors.include?(:birthday)
            .error-message
              = resource.errors.full_messages_for(:birthday).first

        .actions
          = f.submit "新規作成", class: "submit-btn"
  .out-frame__footer

    = render "devise/shared/links"
