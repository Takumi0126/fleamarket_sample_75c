.header
  = render "header.html.haml"
%nav.breadCrumbs
  %ul
    %li

      = link_to "FURIMA", items_path

    %li
      %i.fa.fa-angle-right
    -if @grandchild_category.has_parent?
      %li
        = link_to @parent_category.name, "items"
      %li
        %i.fa.fa-angle-right
      %li
        = link_to @child_category.name, "items"
      %li
        %i.fa.fa-angle-right
      %li
        = link_to @grandchild_category.name, "items"
      %li
        %i.fa.fa-angle-right
    %li
      = link_to "product3", "items"

.main
  .showmain
    .contentLeftqq
    .contentRight
      .topContent
        .itemBox
          %h2.itemBox__name
            ="#{@item.name}"
          .itemBox__body

            %ul.top
              %li.topimage
                = image_tag @item.images[0].src.url
                %ul.subimage
                  %li.subimages
                    -# - subitem = @item.images.src.url > @item.images[0].src.url
                    - @item.images.each do |image|
                      = image_tag image.src.url

          .itemBox__price
            %span.digit
              ="¥#{@item.price.to_s}"
            .itemBox__price-detail
              %span
                (税込み)
              %span
                (送料込み)
          .itemDetail
            ="#{@item.description}"
          .table
            %table
              %tbody
                %tr
                  %th 出品者
                  %td hoge
                %tr
                  %th カテゴリー

                  -if @grandchild_category.has_parent?
                    %td
                      = link_to @parent_category.name, "items"
                      %br
                      = link_to @child_category.name, "items"
                      %br
                      = link_to @grandchild_category.name, "items"

                %tr
                  %th ブランド
                  %td
                %tr
                  %th 商品のサイズ
                  %td
                %tr
                  %th 商品の状態
                  %td 未使用に近い
                %tr
                  %th 配送料の負担
                  %td 送料込み(出品者負担)
                %tr
                  %th 発送元の地域
                  %td
                    = link_to "岩手県", "items"

                %tr
                  %th 発送日の目安
                  %td 4-7日で発送
          .optionalArea
            %ul
              %li#likeBtn.optionalBtn.likeBtn
                %i.fa.fa-star
                お気に入り 0
            %ul.optional
              %li.optionalBtn
                = link_to "#" do
                  %i.fa.fa-flag
                  不適切な商品の通報


          .buttonArea
            %ul.butttons
              %li
                = link_to item_path(@item.id), method: :delete, class: "deleteBtn" do
                  %i.fas.fa-trash-alt
                  削除
              %li
                = link_to "edit_item_path(item)", class: "editBtn" do
                  %i.fas.fa-edit
                  編集
              %li
                = link_to purchase_item_path, class: "purchaseBtn" do
                  %i.fas.fa-shopping-cart
                  購入

        .commentBox
          %ul.commentContents
            %form#new_comment.new_comment
              %textarea#comment_body{name: "comment[body]", required: "required"}
              %p.noticeMsg
                相手のことを考え丁寧なコメントを心がけましょう
                %br
                不快な言葉遣いなどは利用制限や退会処分となることがあります
              %button.commentBtn{name: "button", type: "submit"}
                %i.fa.fa-comment
                  コメントする

      %ul.links
        %li.before
          = link_to "#" do 
            %i.fa.fa-angle-left
            %span
              前の商品
        %li.next
          = link_to "#" do 
            %span
              後ろの商品
              %i.fa.fa-angle-right

      .relatedItems
        = link_to "ベビー・キッズをもっと見る", "items"
        .productLists
          .productList
            = link_to "#" do
              = image_tag("https://s3-ap-northeast-1.amazonaws.com/mercarimaster/uploads/captured_image/content/16/IMG_9072.JPG", class: "productList-image")
              .bodyText
                %h3.nameText ee
                .detail
                  %ul
                    %li 1000円
                    %li.likeIcon
                      %i.fa.fa-star 0
                  %p 税込み

= render partial: "fotter.html.haml"







